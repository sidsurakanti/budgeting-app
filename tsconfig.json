{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "baseUrl": "app",
    "paths": {
      "@/*": ["./*"],                      // ./app/* 
      "@ui/*": ["ui/*"],                   // ./app/ui/*
      "@lib/*": ["lib/*"],                 // ./app/lib/*
      "@components/*": ["ui/components/*"] // ./app/ui/components/*
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
